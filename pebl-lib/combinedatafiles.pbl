##This reads N lines of text
define FileReadNLines(file,n)
{
  filein <- FileopenRead(file)
  out <- ""
  loop(i, Sequence(1,n,1))
  {
    out <- out + FileReadLine(filein) +CR(1)
    if(EndOfFile(filein))
    {
      break
    }
   }
  return out
}

