##checks to see if a filename is .. or .
##this is just a helper for CombineDataFiles
define IsDotFile(i)
{
  
  isdot <-   SubString(i,StringLength(i),1) == "."


  if(StringLength(i)>1)
  {
    isdot <- isdot or (SubString(i,StringLength(i)-1,2) == "..")
  }
 return isdot
}


